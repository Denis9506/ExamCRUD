@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Report";
}

<h2>Delete Report</h2>

<h3>Are you sure you want to delete this report?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Report.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Report.Description</dd>
        <dt class="col-sm-2">Date:</dt>
        <dd class="col-sm-10">@Model.Report.PublishedDate</dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
