@page
@model CreateModel
@{
    ViewData["Title"] = "Create Report";
}

<h2>Create Report</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Report.Title"></label>
        <input asp-for="Report.Title" class="form-control" />
        <span asp-validation-for="Report.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Report.Description"></label>
        <textarea asp-for="Report.Description" class="form-control"></textarea>
        <span asp-validation-for="Report.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReportFile">Upload Report File</label>
        <input type="file" asp-for="ReportFile" class="form-control" />
        <span asp-validation-for="ReportFile" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Report.AuthorRowKey">Select Author</label>
        <select asp-for="Report.AuthorRowKey" class="form-control">
            <option value="">---Choose an author--</option>
            @foreach (var author in Model.Authors)
            {
                <option value="@author.RowKey">@author.NickName</option>
            }
        </select>
        <span asp-validation-for="Report.AuthorRowKey" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Report.PublishedDate"></label>
        <input asp-for="Report.PublishedDate" class="form-control" value="@Model.PublishedDate.ToString("yyyy-MM-ddTHH:mm")" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
