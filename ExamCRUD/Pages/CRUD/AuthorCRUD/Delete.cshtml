@page
@model DeleteModel
@{
    ViewData["Title"] = "Delete Author";
}

<h2>Delete Author</h2>

<h3>Are you sure you want to delete this author?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            NickName
        </dt>
        <dd class="col-sm-10">
            @Model.Author.NickName
        </dd>
        <dt class="col-sm-2">
            Role
        </dt>
        <dd class="col-sm-10">
            @Model.Author.Role
        </dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./././Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
